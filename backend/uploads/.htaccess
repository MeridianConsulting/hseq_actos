<IfModule mod_authz_core.c>
	Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
	Order allow,deny
	Deny from all
</IfModule>

<IfModule mod_authz_core.c>
  Require all denied
</IfModule>
<IfModule !mod_authz_core.c>
  Deny from all
</IfModule>

# Solo permitir a trav√©s de PHP (descarga autenticada). Si se habilita acceso directo a ciertos tipos,
# comentar el bloque anterior y descomentar lo siguiente:
# <FilesMatch "\.(jpg|jpeg|png|gif|pdf|doc|docx)$">
#   Require all granted
# </FilesMatch>

<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "DENY"
  Header set Cache-Control "no-store"
</IfModule>